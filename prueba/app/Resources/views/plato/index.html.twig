{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Lista de Platos</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Disponible</th>
                <th>Usuario</th>
                <th>Acciones</th>
                <th>Seleccionar</th>
            </tr>
        </thead>
        <tbody>
        {% for plato in platos %}
            <tr>
                <td><a href="{{ path('plato_show', { 'id': plato.id }) }}">{{ plato.id }}</a></td>
                <td>{{ plato.nombre }}</td>
                <td>{{ plato.precio }}</td>
                <td>{% if plato.disponible %}Yes{% else %}No{% endif %}</td>
                <td>{{ usuario }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plato_show', { 'id': plato.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plato_edit', { 'id': plato.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
                <td><a href="{{ path('pedido_new', { 'id': plato.id },{'id2':usuario}) }}" class="btn btn-info">Seleccionar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li class="btn btn-primary">
            <a class="text-white" href="{{ path('plato_new') }}">Nuevo Plato</a>
        </li>
    </ul>
{% endblock %}
